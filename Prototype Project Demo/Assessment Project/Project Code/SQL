CREATE TABLE "AssessmentAPI_assessment" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "date" date NOT NULL, "score" decimal NOT NULL, "percent_complete" decimal NOT NULL, "comments" text NOT NULL, "status" varchar(255) NOT NULL, "site_location" varchar(255) NOT NULL, "assessment_template" integer NOT NULL, "alignment_engineer" integer NOT NULL, "customer" integer NOT NULL)
CREATE TABLE "AssessmentAPI_assessmentquestion" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "question" text NOT NULL, "answer" text NOT NULL, "support" text NOT NULL)
CREATE TABLE "AssessmentAPI_assessmenttemplate" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "name" varchar(255) NOT NULL, "assessment_type" varchar(255) NOT NULL, "description" text NOT NULL)
CREATE TABLE "AssessmentAPI_customer" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "name" varchar(255) NOT NULL, "primary_location" varchar(255) NOT NULL, "alignment_engineer" integer NOT NULL, "vcio" integer NOT NULL)
CREATE TABLE "AssessmentAPI_project" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "name" varchar(255) NOT NULL, "status" varchar(255) NOT NULL, "cost" decimal NOT NULL, "description" text NOT NULL, "completion_date" date NOT NULL, "project_manager" integer NOT NULL)
CREATE TABLE "AssessmentAPI_proposedproject" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "name" varchar(255) NOT NULL, "completion_date" date NOT NULL, "description" text NOT NULL, "customer" integer NOT NULL)
CREATE TABLE "AssessmentAPI_recommendation" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "name" varchar(255) NOT NULL, "completion_date" date NOT NULL, "description" text NOT NULL, "status" varchar(255) NOT NULL, "priority" integer NOT NULL, "assessment" integer NOT NULL, "customer" integer NOT NULL)
CREATE TABLE "AssessmentAPI_recommendationproposedproject" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "proposed_project" integer NOT NULL, "recommendation" integer NOT NULL)
CREATE TABLE "AssessmentAPI_technologyinventory" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "device_name" varchar(255) NOT NULL, "site_location" varchar(255) NOT NULL, "type" varchar(255) NOT NULL, "make" varchar(255) NOT NULL, "model" varchar(255) NOT NULL, "serial_number" varchar(255) NOT NULL, "operating_system" varchar(255) NOT NULL, "date_purchased" date NOT NULL, "date_warranty_expired" date NOT NULL, "age_years" integer NOT NULL, "date_last_updated" date NOT NULL, "customer" integer NOT NULL)
CREATE TABLE "AssessmentAPI_user" ("id" integer NOT NULL PRIMARY KEY AUTOINCREMENT, "name" varchar(255) NOT NULL, "email_address" varchar(254) NOT NULL, "security_group" varchar(255) NOT NULL)
-- Delete data from all tables
DELETE FROM AssessmentAPI_user;
DELETE FROM AssessmentAPI_assessmentquestion;
DELETE FROM AssessmentAPI_assessment;
DELETE FROM AssessmentAPI_project;
DELETE FROM AssessmentAPI_proposedproject;
DELETE FROM AssessmentAPI_recommendation;
DELETE FROM AssessmentAPI_recommendationproposedproject;
DELETE FROM AssessmentAPI_technologyinventory;
DELETE FROM AssessmentAPI_customer;
DELETE FROM AssessmentAPI_assessmenttemplate;

